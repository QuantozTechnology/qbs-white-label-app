@if (IsLoading)
{
    <div class="d-flex justify-content-center align-items-center">
        <div class="spinner-border" role="status"></div>
    </div>
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public required bool IsLoading { get; set; }

    [Parameter]
    public required RenderFragment ChildContent { get; set; }
}